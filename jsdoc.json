{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [
            "./build/essentials-x.js"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "jsdoc-mermaid",
        "node_modules/better-docs/category"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "README.md",
        "recurse": true,
        "verbose": true,
        "tutorials": "./docs-src/tutorials",
        "template": "./node_modules/better-docs"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true,
        "default": {
            "staticFiles": {
                "include": [
                    "./docs-src/statics"
                ]
            }
        },
        "better-docs": {
            "name": "Essentials Documentation",
            "title": "Essentials Documentation",
            "css": "style.css",
            "hideGenerator": false,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/bhavjitChauhan/Essentials"
                }
            ]
        }
    }
}